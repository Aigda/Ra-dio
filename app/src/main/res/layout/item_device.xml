<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Device Name" />

        <TextView
            android:id="@+id/tv_status_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="â— ONLINE"
            android:textColor="#4CAF50" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_device_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#666666"
        android:fontFamily="monospace"
        android:text="ID: aa425396 | MAC: 00:11:22:33:44:55" />

    <TextView
        android:id="@+id/tv_app_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#666666"
        android:text="App: Detected | Seen: 5x" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_heartbeat_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:text="HEARTBEAT" />

    <TextView
        android:id="@+id/tv_heartbeat_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:textColor="#444444"
        android:text="Sent: HB#15 (3s ago)" />

    <TextView
        android:id="@+id/tv_heartbeat_received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:textColor="#444444"
        android:text="Recv: HB#12 (5s ago)" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/tv_messages_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:text="MESSAGES" />

    <TextView
        android:id="@+id/tv_messages_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:textColor="#444444"
        android:text="No messages sent" />

    <TextView
        android:id="@+id/tv_messages_received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:textColor="#444444"
        android:text="No messages received" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/tv_acks_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:text="ACKNOWLEDGMENTS" />

    <TextView
        android:id="@+id/tv_acks_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:textColor="#444444"
        android:text="No ACKs" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/tv_service_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:textColor="#9C27B0"
        android:text="Service: WFD_Main | Slot: -" />

</LinearLayout>